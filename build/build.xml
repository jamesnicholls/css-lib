<?xml version="1.0" encoding="UTF-8"?>
<project name="my-framework" default="compress">
  
  <taskdef name="minify" classname="kpMinTask" classpath="./tasks/" />
  <taskdef name="combine" classname="CombineCssTask" classpath="./combinecss/" />
  
  <property name="source" value="master.css" />
  <property name="target" value="style.css" />
  
  <target name="compress">
    <echo>Combining CSS...</echo>
    <combine source="${project.basedir}/../${source}" target="${project.basedir}/../${target}" />
    
    <echo>Minifying CSS...</echo>
    <minify targetDir="${project.basedir}/.." yuiPath="tools/yuicompressor/yuicompressor-2.4.2.jar">
      <fileset dir="${project.basedir}/..">
        <include name="${target}"/>
      </fileset>
    </minify>
  </target>
</project>